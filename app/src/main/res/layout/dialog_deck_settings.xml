<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="24dp">

    <CheckBox
        android:id="@+id/checkFullStudy"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Полное изучение (все карточки сразу)"
        android:textColor="#DDDDDD"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Отключите, чтобы включить постепенный режим."
        android:textSize="12sp"
        android:textColor="#888888"
        android:layout_marginBottom="16dp"/>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/layoutBatchSize"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Карточек в 'постепенном' режиме">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/editBatchSize"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:textColor="#FFFFFF"/>

    </com.google.android.material.textfield.TextInputLayout>

</LinearLayout>