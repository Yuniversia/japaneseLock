<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingTop="24dp"
        android:paddingStart="24dp"
        android:paddingEnd="24dp">

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:hint="Показываемый текст (Вопрос)">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/editQuestion"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="text"
                android:textColor="#FFFFFF"/>

        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:hint="Ожидаемый ответ (Перевод)">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/editAnswer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="text"
                android:textColor="#FFFFFF"/>

        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:hint="Чтение (необязательно, напр. 'neko')">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/editReading"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="text"
                android:textColor="#FFFFFF"/>

        </com.google.android.material.textfield.TextInputLayout>

        <CheckBox
            android:id="@+id/checkInvertible"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Инвертирование ответа"
            android:textColor="#DDDDDD"/>

        <CheckBox
            android:id="@+id/checkReadingCheck"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Проверять чтение (вместо ответа)"
            android:textColor="#DDDDDD"
            android:layout_marginBottom="16dp"/>

    </LinearLayout>
</ScrollView>